{
  "name": "VoiceExtGPT",
  "version": "1.1.0",
  "manifest_version": 3,
  "permissions": ["tabs", "storage", "downloads", "activeTab", "scripting"],
  "description": "Web extention to use Whisper AI api on chat gpt website to translate your voice",
  "icons": {
    "128": "/icons/icon128.png",
    "48": "/icons/icon48.png",
    "16": "/icons/icon16.png"
  },
  "host_permissions": ["https://chat.openai.com/c/*"],
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/c/*", "https://chat.openai.com/*"],
      "run_at": "document_idle",
      "all_frames": false,
      "js": ["bundle.js"],
      "css": ["microphone.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["microphone.css", "icons/mic.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "modal.html"
  }
}
